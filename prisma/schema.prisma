generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Symptome {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  coverImage String
  logoImage  String
  name       String
  precaution String

  produits Produit[]
}

model Produit {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  brand       String
  description String
  property    String
  use         String
  composition String
  reference   String
  symptomeId  String @db.ObjectId
  voies       String[]

  symptome Symptome @relation(fields: [symptomeId], references: [id], onDelete: Cascade)   
}